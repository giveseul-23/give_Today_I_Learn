<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- 먼저 실행되는 거~~~  
		web.xml 내 리스너 listener 에 의해 가장 우선시 됨
	-->
	<context:component-scan base-package="com.spring.biz.board, com.spring.biz.user" />
	<context:component-scan base-package="com.spring.biz.common" />
	<!--
			이렇게 따로 작성한 이유는 presentatiton-layer.xml -> 에도 컨테이너에 올라가는데
			com.spring.biz 해버리면 컨트롤러가 컨테이너에 중복되게 됨
	  -->
	  
	 <!-- Spring JDBC 관련 설정 -->
	<!-- DataSource 설정 -->
	<!-- BasicDataSource 2.5.0 ver -->
	<bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource"
		  destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.OracleDriver"></property>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"></property>
		<property name="username" value="mystudy"></property>
		<property name="password" value="mystudypw"></property>
	</bean>

	<!-- 스프링 JDBC jdbcTemplate 객체(인스턴스) 생성 -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
</beans>
